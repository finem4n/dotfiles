[global]

[main]

capslock = leftcontrol

leftcontrol = layer(hhkblike_layer)
rightcontrol = layer(hhkblike_layer)

leftalt = leftmeta
leftmeta = leftalt

leftshift = leftshift
rightshift = rightshift

mouseforward = micmute

[hhkblike_layer]

\ = toggle(gaming_layout)

tab = capslock
[ = esc

q = previoussong
w = nextsong
e = playpause

a = volumedown
s = volumeup
d = mute
f = micmute

h = left
j = down
k = up
l = right

y = home
u = pagedown
i = pageup
o = end

z = brightnessdown
x = brightnessup

1 = f1
2 = f2
3 = f3
4 = f4
5 = f5
6 = f6
7 = f7
8 = f8
9 = f9
0 = f10
- = f11
= = f12

[gaming_layout]

capslock = leftcontrol

leftalt = leftalt
leftmeta = leftmeta

leftshift = leftshift
rightshift = rightshift

e = up
s = left
d = down
f = right
